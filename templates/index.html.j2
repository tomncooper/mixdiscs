<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mixdiscs - Playlists...but nerdier</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>MIXDISCS</h1>
            <h2 class="subtitle">Playlists...but nerdier</h2>
            {% if show_all_link %}
            <div class="nav-links">
                <a href="index.html" class="nav-link">← Back to Recent</a>
            </div>
            {% else %}
            <div class="nav-links">
                <a href="all-playlists.html" class="nav-link">View All Playlists →</a>
                <a href="users.html" class="nav-link">Browse by User</a>
                <a href="genres.html" class="nav-link">Browse by Genre</a>
            </div>
            {% endif %}
        </header>
    
    {% if page_title %}
        <h2 style="color: var(--cyan); margin: 20px 0;">{{ page_title }}</h2>
    {% endif %}
    
    {% if processed_playlists %}
        {% for processed_playlist in processed_playlists %}
            <div class="playlist">
                <div class="playlist-header collapsed">
                    <div class="playlist-header-content">
                        <div>
                            <h2 class="playlist-title">{{ processed_playlist.user_playlist.title }}</h2>
                            <div class="playlist-meta">
                                by <a href="user-{{ processed_playlist.user_playlist.user }}.html">{{ processed_playlist.user_playlist.user }}</a> | 
                                Genre: <a href="genre-{{ processed_playlist.user_playlist.genre }}.html">{{ processed_playlist.user_playlist.genre }}</a>
                            </div>
                            <div class="playlist-meta">
                                {{ processed_playlist.user_playlist.description }}
                            </div>
                        </div>
                        <div class="collapse-icon">▼</div>
                    </div>
                </div>
                
                <div class="playlist-content collapsed">
                {% for music_service_playlist in processed_playlist.music_service_playlists %}
                    <div class="service-header">
                        Music Service Playlist (Total Duration: {{ music_service_playlist.total_duration | duration_format }})
                    </div>
                    
                    <table>
                        <thead>
                            <tr>
                                <th>Track</th>
                                <th>Artist</th>
                                <th>Album</th>
                                <th>Duration</th>
                                <th>Link</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for track in music_service_playlist.tracks %}
                                <tr>
                                    {% if track %}
                                        <td>{{ track.title }}</td>
                                        <td>{{ track.artist }}</td>
                                        <td>{{ track.album or 'N/A' }}</td>
                                        <td class="duration">{{ track.duration | duration_format }}</td>
                                        <td>
                                            {% if track.link %}
                                                <a href="{{ track.link }}" target="_blank" class="link">{{ music_service_playlist.service_name }}</a>
                                            {% else %}
                                                <span class="no-link">No link</span>
                                            {% endif %}
                                        </td>
                                    {% else %}
                                        <td colspan="5" style="color: #999; font-style: italic;">Track not found</td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endfor %}
                </div>
            </div>
        {% endfor %}
        
        {% if pagination %}
        <div class="pagination">
            {% if pagination.prev_page %}
                <a href="{{ pagination.prev_page }}">← Previous</a>
            {% endif %}
            
            {% for page_num in pagination.pages %}
                {% if page_num == pagination.current_page %}
                    <span class="current">{{ page_num }}</span>
                {% else %}
                    <a href="{{ pagination.page_links[page_num] }}">{{ page_num }}</a>
                {% endif %}
            {% endfor %}
            
            {% if pagination.next_page %}
                <a href="{{ pagination.next_page }}">Next →</a>
            {% endif %}
        </div>
        {% endif %}
    {% else %}
        <p>No processed playlists found.</p>
    {% endif %}
    </div>
    <script src="script.js"></script>
</body>
</html>