<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mixdiscs - Playlists...but nerdier</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>MIXDISCS</h1>
            <h2 class="subtitle">Playlists...but nerdier</h2>
            {% if show_all_link %}
            <div class="nav-links">
                <a href="index.html" class="nav-link">‚Üê Back to Recent</a>
                <a href="frozen-playlists.html" class="nav-link">‚ö†Ô∏è Frozen Playlists</a>
            </div>
            {% else %}
            <div class="nav-links">
                <a href="all-playlists.html" class="nav-link">View All Playlists ‚Üí</a>
                <a href="users.html" class="nav-link">Browse by User</a>
                <a href="genres.html" class="nav-link">Browse by Genre</a>
                <a href="frozen-playlists.html" class="nav-link">‚ö†Ô∏è Frozen Playlists</a>
            </div>
            {% endif %}
        </header>
    
    {% if page_title %}
        <h2 style="color: var(--cyan); margin: 20px 0;">{{ page_title }}</h2>
    {% endif %}
    
    {% if processed_playlists %}
        {% for processed_playlist in processed_playlists %}
            <div class="playlist">
                <div class="playlist-header collapsed">
                    <div class="playlist-header-content">
                        <div>
                            <h2 class="playlist-title">
                                {{ processed_playlist.user_playlist.title }}
                                
                                {% if processed_playlist.validation_warning %}
                                <span class="warning-icon" data-tooltip="true" aria-label="Validation warning">
                                    ‚ö†Ô∏è
                                    <div class="tooltip">
                                        <strong>‚ö†Ô∏è Validation Warning</strong>
                                        <p>{{ processed_playlist.validation_warning.message }}</p>
                                        
                                        {% if processed_playlist.validation_warning.details %}
                                        <div class="warning-details">
                                            <table>
                                                <tr>
                                                    <td>Frozen on:</td>
                                                    <td><strong>{{ processed_playlist.validation_warning.frozen_at|datetime_format }}</strong></td>
                                                </tr>
                                                <tr>
                                                    <td>Cached version from:</td>
                                                    <td><strong>{{ processed_playlist.validation_warning.frozen_version_date|datetime_format }}</strong></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2"><hr style="margin: 8px 0; border-color: #d39e00;"></td>
                                                </tr>
                                                <tr>
                                                    <td>Remote duration:</td>
                                                    <td>{{ processed_playlist.validation_warning.details.current_duration }}</td>
                                                </tr>
                                                <tr>
                                                    <td>Duration limit:</td>
                                                    <td>{{ processed_playlist.validation_warning.details.limit }}</td>
                                                </tr>
                                                <tr>
                                                    <td>Exceeded by:</td>
                                                    <td><span class="exceeded">{{ processed_playlist.validation_warning.details.exceeded_by }}</span></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2"><hr style="margin: 8px 0; border-color: #d39e00;"></td>
                                                </tr>
                                                <tr>
                                                    <td>Remote tracks:</td>
                                                    <td>{{ processed_playlist.validation_warning.details.current_track_count }}</td>
                                                </tr>
                                                <tr>
                                                    <td>Showing tracks:</td>
                                                    <td>{{ processed_playlist.validation_warning.details.cached_track_count }}</td>
                                                </tr>
                                                {% if processed_playlist.validation_warning.details.current_track_count != processed_playlist.validation_warning.details.cached_track_count %}
                                                <tr>
                                                    <td>Track difference:</td>
                                                    <td><span class="track-diff">+{{ processed_playlist.validation_warning.details.current_track_count - processed_playlist.validation_warning.details.cached_track_count }} tracks</span></td>
                                                </tr>
                                                {% endif %}
                                            </table>
                                        </div>
                                        {% endif %}
                                        
                                        <p class="warning-action">
                                            üí° Fix this by removing tracks on 
                                            <a href="{{ processed_playlist.user_playlist.remote_playlist }}" target="_blank">Spotify</a> 
                                            to get under 80 minutes.
                                        </p>
                                    </div>
                                </span>
                                {% endif %}
                                
                                {% if processed_playlist.user_playlist.remote_playlist %}
                                <a href="{{ processed_playlist.user_playlist.remote_playlist }}" 
                                   class="remote-badge" 
                                   target="_blank"
                                   title="View on Spotify">
                                    üîó Remote
                                </a>
                                {% endif %}
                            </h2>
                            
                            {% if processed_playlist.validation_warning %}
                            <div class="frozen-notice">
                                üìå Showing cached version from {{ processed_playlist.validation_warning.frozen_version_date|datetime_short }}
                            </div>
                            {% endif %}
                            
                            <div class="playlist-meta">
                                by <a href="user-{{ processed_playlist.user_playlist.user }}.html">{{ processed_playlist.user_playlist.user }}</a> | 
                                Genre: <a href="genre-{{ processed_playlist.user_playlist.genre }}.html">{{ processed_playlist.user_playlist.genre }}</a>
                            </div>
                            <div class="playlist-meta">
                                {{ processed_playlist.user_playlist.description }}
                            </div>
                        </div>
                        <div class="collapse-icon">‚ñº</div>
                    </div>
                </div>
                
                <div class="playlist-content collapsed">
                {% for music_service_playlist in processed_playlist.music_service_playlists %}
                    <div class="service-header">
                        Music Service Playlist (Total Duration: {{ music_service_playlist.total_duration | duration_format }})
                    </div>
                    
                    <table>
                        <thead>
                            <tr>
                                <th>Track</th>
                                <th>Artist</th>
                                <th>Album</th>
                                <th>Duration</th>
                                <th>Link</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for track in music_service_playlist.tracks %}
                                <tr>
                                    {% if track %}
                                        <td>{{ track.title }}</td>
                                        <td>{{ track.artist }}</td>
                                        <td>{{ track.album or 'N/A' }}</td>
                                        <td class="duration">{{ track.duration | duration_format }}</td>
                                        <td>
                                            {% if track.link %}
                                                <a href="{{ track.link }}" target="_blank" class="link">{{ music_service_playlist.service_name }}</a>
                                            {% else %}
                                                <span class="no-link">No link</span>
                                            {% endif %}
                                        </td>
                                    {% else %}
                                        <td colspan="5" style="color: #999; font-style: italic;">Track not found</td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endfor %}
                </div>
            </div>
        {% endfor %}
        
        {% if pagination %}
        <div class="pagination">
            {% if pagination.prev_page %}
                <a href="{{ pagination.prev_page }}">‚Üê Previous</a>
            {% endif %}
            
            {% for page_num in pagination.pages %}
                {% if page_num == pagination.current_page %}
                    <span class="current">{{ page_num }}</span>
                {% else %}
                    <a href="{{ pagination.page_links[page_num] }}">{{ page_num }}</a>
                {% endif %}
            {% endfor %}
            
            {% if pagination.next_page %}
                <a href="{{ pagination.next_page }}">Next ‚Üí</a>
            {% endif %}
        </div>
        {% endif %}
    {% else %}
        <p>No processed playlists found.</p>
    {% endif %}
    </div>
    <script src="script.js"></script>
</body>
</html>